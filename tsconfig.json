{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@images/*": ["assets/images/*"]
    }
  },
  "include": [
     "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
